<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F1FC"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <!-- Old Password -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/editOldPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/toggleOldPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_visibility_on"
            android:padding="4dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- New Password -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/editNewPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/toggleNewPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_visibility_on"
            android:padding="4dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Repeat Password -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/editRepeatPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/toggleRepeatPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_visibility_on"
            android:padding="4dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textSignOut"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SIGN OUT"
            android:textSize="14sp"
            android:textColor="#7B1FA2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7B1FA2"
            android:elevation="4dp"
            android:textAllCaps="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>
</LinearLayout>
