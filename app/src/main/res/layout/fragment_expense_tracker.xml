<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="com.hiksrot.hiksrotzexpensetracker.view.expenseTracker.ExpenseClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <!-- RecyclerView untuk list expense -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recExpense"
            android:layout_below="@id/textTitle"
            android:layout_above="@id/fabAddExpense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Pesan kosong -->
        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="No expenses yet"
            android:textSize="16sp"
            android:textColor="#666"/>

        <!-- Loader -->
        <ProgressBar
            android:id="@+id/progressLoad"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <!-- FAB Tambah Expense -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="24dp"
            android:contentDescription="Add Expense"
            app:backgroundTint="#E0D4FA"
            app:elevation="8dp"
            android:onClick="@{listener::onAddExpenseClick}"
            app:srcCompat="@android:drawable/ic_input_add"/>
    </RelativeLayout>
</layout>
